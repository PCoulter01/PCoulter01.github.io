---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icon from "../components/Icon.astro";
---

<BaseLayout>
    <div class="container">
        <span class="big-circle"></span>
        <div class="form">
            <div class="contact-info">
                <h3 class="title">Let's get in touch</h3>
                <p class="text">
                    My inbox is always open. Whether you have a question, want
                    to work with me, or just want to say hi, Iâ€™ll try my best to
                    get back to you!
                </p>

                <div class="info">
                    <div class="information">
                        <p>Boston, MA</p>
                    </div>
                    <div class="information">
                        <a href="mailto:patrickcoulter01@gmail.com">
                            <p>patrickcoulter01@gmail.com</p>
                        </a>
                    </div>
                </div>

                <div class="social-media">
                    <p>Connect with me :</p>
                    <div class="social-icons">
                        <a href="https://github.com/patepic" target="_blank">
                            <Icon icon="github-logo" size="1.75em" />
                        </a>
                        <a
                            href="https://www.linkedin.com/in/patrick-coulter/"
                            target="_blank"
                        >
                            <Icon icon="linkedin-logo" size="1.75em" />
                        </a>
                    </div>
                </div>
            </div>

            <div class="contact-form">
                <span class="circle one"></span>
                <span class="circle two"></span>

                <form name="contact" method="POST" data-netlify="true" onsubmit="submit" data-netlify-honeypot="bot-field" action="/success/">
                    <input class="bot-field" name="bot-field">
                    <h3 class="title">Contact</h3>
                    <div class="input-container">
                        <input type="text" placeholder="name" class="input" name="name" />
                        <span>Username</span>
                    </div>
                    <div class="input-container">
                        <input type="email" placeholder="email" class="input" name="email" />
                        <span>Email</span>
                    </div>
                    <div class="input-container textarea">
                        <textarea placeholder="message" class="input" name="message" />
                        <span>Message</span>
                    </div>
                    <input type="submit" value="Send" class="btn" />
                </form>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    a {
        text-decoration: 1px solid underline transparent;
        text-underline-offset: 0.25em;
        transition: text-decoration-color var(--theme-transition);
    }

    a:hover {
        text-decoration-color: currentColor;
    }

    .bot-field {
        display: none;
    }

    .container {
        position: relative;
        width: 100%;
        height: 70vh;
        padding: 2rem;
        margin-top: 5rem;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color var(--theme-transition),
            background var(--theme-transition);
    }

    .form {
        width: 100%;
        max-width: 820px;
        background: var(--background);
        border-radius: 10px;
        box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        overflow: hidden;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
    }

    .contact-form {
        background: var(--accent-light);
        position: relative;
    }

    .circle {
        border-radius: 50%;
        background: var(--gradient-accent);
        position: absolute;
    }

    .circle.one {
        width: 130px;
        height: 130px;
        top: 130px;
        right: -40px;
    }

    .circle.two {
        width: 80px;
        height: 80px;
        top: 10px;
        right: 30px;
    }

    .contact-form:before {
        content: "";
        position: absolute;
        width: 26px;
        height: 26px;
        transform: rotate(45deg);
        top: 50px;
        left: -13px;
    }

    form {
        padding: 2.3rem 2.2rem;
        z-index: 10;
        overflow: hidden;
        position: relative;
    }

    .title {
        color: #f8f6fb;
        font-weight: 500;
        font-size: 1.5rem;
        line-height: 1;
        margin-bottom: 0.7rem;
    }

    .input-container {
        position: relative;
        margin: 1rem 0;
    }

    .input {
        width: 100%;
        outline: none;
        border: 2px solid var(--accent-text-over);
        background: none;
        padding: 0.6rem 1.2rem;
        font-weight: 500;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
        border-radius: 25px;
        transition: 0.3s;
    }

    textarea.input {
        padding: 0.8rem 1.2rem;
        min-height: 150px;
        border-radius: 22px;
        resize: none;
        overflow-y: auto;
        color: #f8f6fb;
    }

    .input-container.textarea::placeholder {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        padding: 0 0.4rem;
        color: #f8f6fb;
        font-size: 0.9rem;
        font-weight: 400;
        pointer-events: none;
        z-index: 1000;
        transition: 0.5s;
    }

    .input::placeholder {
        color: #f8f6fb;
    }

    .btn {
        padding: 0.6rem 1.3rem;
        background: var(--accent-text-over);
        border: 2px solid #f8f6fb;
        font-size: 0.95rem;
        color: var(--accent-light);
        line-height: 1;
        border-radius: 25px;
        outline: none;
        cursor: pointer;
        transition: 0.3s;
        margin: 0;
    }

    .btn:hover {
        background: transparent;
        color: #f8f6fb;
    }

    .input-container span {
        position: absolute;
        top: 0;
        left: 25px;
        transform: translateY(-50%);
        font-size: 0.8rem;
        padding: 0 0.4rem;
        color: transparent;
        pointer-events: none;
        z-index: 500;
    }

    .input-container span:before,
    .input-container span:after {
        content: "";
        position: absolute;
        width: 10%;
        opacity: 0;
        transition: 0.3s;
        height: 5px;
        top: 50%;
        transform: translateY(-50%);
    }

    .input-container span:before {
        left: 50%;
    }

    .input-container span:after {
        right: 50%;
    }

    .input-container.focus label {
        top: 0;
        transform: translateY(-50%);
        left: 25px;
        font-size: 0.8rem;
    }

    .input-container.focus span:before,
    .input-container.focus span:after {
        width: 50%;
        opacity: 1;
    }

    .contact-info {
        padding: 2.3rem 2.2rem;
        position: relative;
    }

    .contact-info .title {
        color: var(--accent-dark);
    }

    .text {
        color: var(--text);
        margin: 1.5rem 0 2rem 0;
        opacity: 80%;
    }

    .information {
        display: flex;
        margin: 0.7rem 0;
        align-items: center;
        font-size: 1.2rem;
        opacity: 80%;
    }

    .icon {
        width: 28px;
        margin-right: 0.2rem;
    }

    .social-media {
        padding: 2rem 0 0 0;
    }

    .social-media p {
        color: #181818;
    }

    .social-icons {
        display: flex;
        margin-top: 0.5rem;
    }

    .social-icons a {
        width: 35px;
        height: 35px;
        border-radius: 5px;
        background: var(--gradient-accent);
        color: #f8f6fb;
        text-align: center;
        line-height: 35px;
        margin-right: 0.5rem;
        transition: 0.3s;
    }

    .social-icons a:hover {
        transform: scale(1.05);
    }

    .contact-info:before {
        content: "";
        position: absolute;
        width: 110px;
        height: 100px;
        border: 22px solid var(--accent-regular);
        border-radius: 50%;
        bottom: -77px;
        right: 50px;
        opacity: 0.3;
    }

    .big-circle {
        position: absolute;
        width: 400px;
        height: 400px;
        border-radius: 50%;
        background: var(--gradient-accent);
        bottom: 50%;
        right: 50%;
        transform: translate(-40%, 38%);
    }

    .big-circle:after {
        content: "";
        position: absolute;
        width: 360px;
        height: 360px;
        background: var(--background);
        border-radius: 50%;
        top: calc(50% - 180px);
        left: calc(50% - 180px);
    }

    @media screen and (max-width: 600px) {
    .container {
        height: auto;
        padding: 0;
    }

    .form {
        grid-template-columns: 1fr;
    }

    .big-circle {
        display: none;
    }

    .contact-info,
    .contact-form {
        padding: 2rem;
    }

    .contact-info:before {
        top: 25rem;
    }

    .circle.one {
        top: 10rem;
    }

    .circle.two {
        top: 3rem;
    }

    .contact-form {
        margin-top: 2rem;
    }

    .contact-form:before {
        top: 30px;
        left: 20px;
    }
}
</style>
